<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/hangman"
        android:name="com.example.hw4_q5.Hangman"
        android:layout_width="275dp"
        android:layout_height="275dp"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_hangman" />

    <fragment
        android:id="@+id/word"
        android:name="com.example.hw4_q5.Word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hangman"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        app:layout_constraintHorizontal_weight="5"
        tools:layout="@layout/fragment_word" />

    <fragment
        android:id="@+id/hint"
        android:name="com.example.hw4_q5.HintButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/keyboard"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_weight="5"
        tools:layout="@layout/fragment_hint_button" />

    <fragment
        android:id="@+id/keyboard"
        android:name="com.example.hw4_q5.KeyboardFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/hangman"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintRight_toLeftOf="@id/hangman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_keyboard" />

</androidx.constraintlayout.widget.ConstraintLayout>
